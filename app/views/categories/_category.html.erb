<%- model_class = Category -%>

<tr>
    <td><%= category.name %></td>
    <td><%= category.description %></td>
    <td><%= category.created_at.strftime("%d.%m.%Y") %></td>
    <td><%= category.updated_at.strftime("%d.%m.%Y") %></td>
    <td>
        <%= link_to glyph(:edit, {:tag => :span}), edit_category_path(category), :class => 'btn btn-xs btn-primary', remote: true %>
        <%= link_to glyph(:trash, {:tag => :span}), category_path(category),
        :remote => true,
        :method => :delete,
        :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
        :class => 'btn btn-xs btn-danger' %>
    </td>
</tr>
