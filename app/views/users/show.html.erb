<%- model_class = User -%>
<div class="page-header">
    <h1>Profile of <%= @user.username %></h1>
</div>

<dl class="dl-horizontal">
    <dt><strong><%= model_class.human_attribute_name(:username) %>:</strong></dt>
    <dd><%= @user.username %></dd>
    <dt><strong><%= model_class.human_attribute_name(:email) %>:</strong></dt>
    <dd><%= @user.email %></dd>

<% if admin? %>
    <dt><strong><%= model_class.human_attribute_name(:is_active) %>:</strong></dt>
    <dd><%= @user.is_active %></dd>
    <dt><strong><%= model_class.human_attribute_name(:is_admin) %>:</strong></dt>
    <dd><%= @user.is_admin %></dd>
<% end %>
    <dt><strong><%= model_class.human_attribute_name(:created_at) %>:</strong></dt>
    <dd><%= @user.created_at %></dd>
    <dt><strong><%= model_class.human_attribute_name(:updated_at) %>:</strong></dt>
    <dd><%= @user.updated_at %></dd>
</dl>


<% if admin? %>
<%= link_to t('.back', :default => t("helpers.links.back")), users_path, :class => 'btn btn-default'  %>
<% else %>
<%= link_to t('.back', :default => t("helpers.links.back")), budgets_path, :class => 'btn btn-default'  %>
<% end %>

<%= link_to t('.edit', :default => t("helpers.links.edit")), edit_user_path(@user), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")), user_path(@user),
:method => 'delete',
:data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
:class => 'btn btn-danger' %>
